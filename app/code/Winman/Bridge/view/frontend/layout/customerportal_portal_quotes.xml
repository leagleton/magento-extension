<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <title>WinMan Customer Portal - Quotes</title>
        <css src="Winman_Bridge::css/style.css"/>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">WinMan Customer Portal</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <referenceContainer name="content">
                <block class="Winman\Bridge\Block\Quotes" name="quotes"
                       template="winman/quotes.phtml"
                       cacheable="false"/>
            </referenceContainer>
        </referenceContainer>
    </body>
</page>
